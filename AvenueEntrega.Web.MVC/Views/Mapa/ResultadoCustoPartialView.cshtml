@using AvenueEntrega.I18N
@model AvenueEntrega.Web.MVC.Models.ResultadoCustoViewModel

<div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@Resources.Views_Mapa_ResultadoCustoPartialView_Button_Fechar</span></button>
            <h3 id="myModalLabel" class="modal-title">&nbsp;@ViewBag.Title</h3>
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.MessageType))
        {
        <div class="alert @ViewBag.MessageType fade in">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <small>@Html.Raw(ViewBag.Message)</small>
        </div>
        }

        <div id="myModalBody" class="modal-body">
            <div id="conteudo-modal">

                @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "myModal" }))
                {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                        @Html.LabelFor(model => model.Caminho, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-6">
                            @Html.DisplayFor(model => model.Caminho, new {htmlAttributes = new {@class = "form-control"}})
                            
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CustoTotal, htmlAttributes: new {@class = "control-label col-md-3"})
                        <div class="col-md-6">
                            @Html.DisplayFor(model => model.CustoTotal, new {htmlAttributes = new {@class = "form-control"}})
                        </div>
                    </div>


                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.NomeMapa)
                    <!--<div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>-->
                </div>
                }

            </div>
        </div>

        <div class="modal-footer form-horizontal">
            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" aria-hidden="true">@Resources.Views_Mapa_ResultadoCustoPartialView_Button_Fechar</button>
            <!--<a id="calcularCusto" onclick="ajaxFormSubmit(this)" href="#" role="button" class="btn btn-sm btn-danger">Calcular</a>-->
        </div>

    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
